          ]
        }
      }
    },
    "r4heater": {
      "id": "#/definitions/r4heater",
      "additionalProperties": false,
      "properties": {
        "R4Heater": {
          "properties": {
            "name": {
              "type": "string"
            },
            "port": {
              "type": "string"
            }
          },
          "required": [
            "port",
            "name"
          ]
        }
      }
    },
    "elite11infuseonly": {
      "id": "#/definitions/elite11infuseonly",
      "additionalProperties": false,
      "properties": {
        "Elite11InfuseOnly": {
          "type": "object",
          "properties": {
            "port": {
              "type": "string"
            },
            "address": {
              "type": "number"
            },
            "diameter": {
